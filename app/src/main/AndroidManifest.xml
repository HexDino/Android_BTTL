<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/sym_def_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/sym_def_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        
        <!-- Main Activity - Danh sách sinh viên -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Add Student Activity - Thêm sinh viên -->
        <activity
            android:name=".AddStudentActivity"
            android:exported="false"
            android:label="Thêm Sinh Viên"
            android:parentActivityName=".MainActivity"/>
        
        <!-- Student Detail Activity - Chi tiết và cập nhật -->
        <activity
            android:name=".StudentDetailActivity"
            android:exported="false"
            android:label="Chi Tiết Sinh Viên"
            android:parentActivityName=".MainActivity"/>
            
    </application>

</manifest>

